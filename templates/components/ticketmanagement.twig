<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{ title }}</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <script>
    let deleteTicketId = null;

    function editTicket(id, title, description, status) {
      document.querySelector('input[name="action"]').value = 'update';
      document.querySelector('input[name="id"]').value = id;
      document.querySelector('input[name="title"]').value = title;
      document.querySelector('textarea[name="description"]').value = description;
      document.querySelector('select[name="status"]').value = status;
      document.querySelector('h2').textContent = '✏️ Edit Ticket';
      document.querySelector('button[type="submit"]').textContent = '💾 Update Ticket';
      document.querySelector('input[name="title"]').focus();
    }

    function deleteTicket(id) {
      deleteTicketId = id;
      showToast('Are you sure you want to delete this ticket?', 'confirm');
    }

    function showToast(message, type) {
      const toast = document.getElementById('toast');
      const toastMessage = document.getElementById('toast-message');
      const toastActions = document.getElementById('toast-actions');

      toastMessage.textContent = message;
      toast.classList.remove('hidden');

      if (type === 'confirm') {
        toastActions.innerHTML = `
          <button onclick="confirmDelete()" class="bg-red-600 hover:bg-red-700 text-white font-semibold px-4 py-2 rounded-lg transition-all">
            🗑️ Delete
          </button>
          <button onclick="hideToast()" class="bg-slate-100 hover:bg-slate-200 text-slate-700 font-semibold px-4 py-2 rounded-lg transition-all">
            ❌ Cancel
          </button>
        `;
      } else {
        toastActions.innerHTML = `
          <button onclick="hideToast()" class="bg-blue-600 hover:bg-blue-700 text-white font-semibold px-4 py-2 rounded-lg transition-all">
            OK
          </button>
        `;
      }

      setTimeout(() => {
        hideToast();
      }, 5000);
    }

    function confirmDelete() {
      if (deleteTicketId) {
        const form = document.createElement('form');
        form.method = 'POST';
        form.action = '?page=tickets';
        form.innerHTML = '<input type="hidden" name="action" value="delete"><input type="hidden" name="id" value="' + deleteTicketId + '">';
        document.body.appendChild(form);
        form.submit();
      }
    }

    function hideToast() {
      const toast = document.getElementById('toast');
      toast.classList.add('hidden');
      deleteTicketId = null;
    }
  </script>
</head>
<body>
  <div class="min-h-screen bg-gradient-to-br from-slate-50 to-slate-100">
    <!-- Header -->
    <header class="bg-white shadow-sm border-b border-slate-200">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
        <div class="flex justify-between items-center">
          <div>
            <h1 class="text-3xl font-bold text-slate-900">Ticket Management</h1>
            <p class="text-slate-600 mt-1">Manage and track your support tickets</p>
          </div>
          <div class="flex gap-3">
            <a
              href="?page=dashboard"
              class="bg-white hover:bg-slate-50 border-slate-300 text-slate-700 font-semibold px-6 py-2 rounded-lg transition-all"
            >
              ← Back to Dashboard
            </a>
            <a
              href="?page=home"
              class="bg-white hover:bg-slate-50 border-slate-300 text-slate-700 font-semibold px-6 py-2 rounded-lg transition-all"
            >
              Logout
            </a>
          </div>
        </div>
      </div>
    </header>

    <!-- Main Content -->
    <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <!-- Form Section -->
        <div class="lg:col-span-1">
          <div class="bg-white shadow-lg border-0 rounded-xl overflow-hidden">
            <div class="bg-blue-600 text-white p-6">
              <h2 class="text-xl font-semibold">
                ➕ Create New Ticket
              </h2>
            </div>
            <div class="p-6">
              <form method="POST" action="?page=tickets" class="space-y-5">
                <input type="hidden" name="action" value="create" />
                <input type="hidden" name="id" value="" />
                <div>
                  <label class="block text-sm font-semibold text-slate-700 mb-2">
                    Title <span class="text-red-500">*</span>
                  </label>
                  <input
                    type="text"
                    name="title"
                    required
                    placeholder="Enter ticket title..."
                    class="w-full px-4 py-3 border-2 border-slate-300 rounded-lg text-sm bg-white focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all"
                  />
                </div>

                <div>
                  <label class="block text-sm font-semibold text-slate-700 mb-2">
                    Description
                  </label>
                  <textarea
                    name="description"
                    placeholder="Describe the issue or request..."
                    class="w-full px-4 py-3 border-2 border-slate-300 rounded-lg text-sm bg-white focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all resize-none"
                    rows="4"
                  ></textarea>
                </div>

                <div>
                  <label class="block text-sm font-semibold text-slate-700 mb-2">
                    Status <span class="text-red-500">*</span>
                  </label>
                  <select
                    name="status"
                    class="w-full px-4 py-3 border-2 border-slate-300 rounded-lg text-sm bg-white focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all"
                  >
                    <option value="open">🟢 Open</option>
                    <option value="in_progress">🟡 In Progress</option>
                    <option value="closed">🔴 Closed</option>
                  </select>
                </div>

                <button
                  type="submit"
                  class="w-full bg-blue-600 hover:bg-blue-700 text-white font-semibold py-3 rounded-lg transition-all transform hover:scale-105"
                >
                  🚀 Create Ticket
                </button>
              </form>
            </div>
          </div>
        </div>

        <!-- Tickets List Section -->
        <div class="lg:col-span-2">
          <div class="bg-white rounded-xl shadow-lg p-6">
            <div class="flex items-center justify-between mb-6">
              <h2 class="text-2xl font-bold text-slate-900 flex items-center">
                <span class="mr-2">🎫</span> Tickets
                <span class="ml-2 bg-blue-100 text-blue-800 px-3 py-1 rounded-full text-sm font-semibold">
                  {{ tickets|length }}
                </span>
              </h2>
            </div>

            {% if tickets %}
            <div class="space-y-4">
              {% for ticket in tickets %}
              <div class="bg-gradient-to-r from-white to-slate-50 border border-slate-200 rounded-lg shadow-sm hover:shadow-md transition-all overflow-hidden">
                <div class="p-6">
                  <div class="flex justify-between items-start gap-4">
                    <div class="flex-1">
                      <h3 class="text-lg font-bold text-slate-900 mb-2 flex items-center">
                        <span class="mr-2">📋</span> {{ ticket.title }}
                      </h3>
                      {% if ticket.description %}
                      <p class="text-slate-600 text-sm mb-4 leading-relaxed">
                        {{ ticket.description }}
                      </p>
                      {% endif %}
                      <div class="flex items-center gap-4 text-sm">
                        <span class="px-3 py-1 rounded-full font-semibold text-xs flex items-center
                          {% if ticket.status == 'open' %}bg-green-100 text-green-800{% elseif ticket.status == 'in_progress' %}bg-yellow-100 text-yellow-800{% else %}bg-red-100 text-red-800{% endif %}">
                          {% if ticket.status == 'open' %}🟢 Open{% elseif ticket.status == 'in_progress' %}🟡 In Progress{% else %}🔴 Closed{% endif %}
                        </span>
                        <span class="text-slate-500 flex items-center">
                          <span class="mr-1">📅</span>
                          {{ ticket.createdAt|date('M j, Y') }}
                        </span>
                      </div>
                    </div>
                    <div class="flex gap-2">
                      <button
                        onclick="editTicket('{{ ticket.id }}', '{{ ticket.title }}', '{{ ticket.description }}', '{{ ticket.status }}')"
                        class="bg-blue-50 hover:bg-blue-100 border-blue-300 text-blue-700 font-semibold px-4 py-2 rounded-lg transition-all"
                      >
                        ✏️ Edit
                      </button>
                      <button
                        onclick="deleteTicket('{{ ticket.id }}')"
                        class="bg-red-50 hover:bg-red-100 border-red-300 text-red-700 font-semibold px-4 py-2 rounded-lg transition-all"
                      >
                        🗑️ Delete
                      </button>
                    </div>
                  </div>
                </div>
              </div>
              {% endfor %}
            </div>
            {% else %}
            <div class="text-center py-16">
              <div class="text-6xl mb-4">📭</div>
              <h3 class="text-xl font-semibold text-slate-700 mb-2">No tickets yet</h3>
              <p class="text-slate-500">Create your first ticket to get started!</p>
            </div>
            {% endif %}
          </div>
        </div>
      </div>
    </main>
  </div>

  <!-- Toast Notification -->
  <div id="toast" class="fixed bottom-4 right-4 bg-white border border-slate-200 rounded-lg shadow-lg p-4 max-w-sm hidden z-50">
    <div class="flex items-start gap-3">
      <div class="flex-shrink-0">
        <span class="text-2xl">⚠️</span>
      </div>
      <div class="flex-1">
        <p id="toast-message" class="text-slate-700 font-medium"></p>
        <div id="toast-actions" class="mt-3 flex gap-2">
        </div>
      </div>
    </div>
  </div>
</body>
</html>
